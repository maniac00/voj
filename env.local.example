# 개발 환경 구분
NODE_ENV=development
ENVIRONMENT=local

# 로컬 서버 설정
NEXT_PUBLIC_API_URL=http://localhost:8000
API_PORT=8000

# 로컬 DynamoDB
DYNAMODB_ENDPOINT=http://localhost:8001
AWS_REGION=ap-northeast-2
AWS_ACCESS_KEY_ID=local
AWS_SECRET_ACCESS_KEY=local

# 로컬 스토리지
STORAGE_TYPE=local
LOCAL_STORAGE_PATH=./storage/audio
LOCAL_STORAGE_BASE_URL=http://localhost:8000/storage

# FFmpeg 경로
FFMPEG_PATH=/opt/homebrew/bin/ffmpeg
FFPROBE_PATH=/opt/homebrew/bin/ffprobe

# 로컬 개발용 JWT 시크릿 (실제 운영에서는 변경 필요)
JWT_SECRET=your-local-jwt-secret-key-change-in-production

# DynamoDB 테이블 이름 (로컬)
DYNAMODB_BOOKS_TABLE=voj-books-local
DYNAMODB_AUDIO_TABLE=voj-audio-chapters-local

# Cognito 설정 (어드민 인증)
# 로컬에서는 빈 값으로 두면 인증 바이패스가 활성화됩니다(개발 편의용).
COGNITO_USER_POOL_ID=
COGNITO_CLIENT_ID=
COGNITO_CLIENT_SECRET=
COGNITO_REGION=ap-northeast-2
COGNITO_DOMAIN=
COGNITO_HOSTED_UI_URL=

# 프론트엔드용 공개 환경 변수 (Next.js)
NEXT_PUBLIC_COGNITO_USER_POOL_ID=
NEXT_PUBLIC_COGNITO_CLIENT_ID=
NEXT_PUBLIC_COGNITO_DOMAIN=
NEXT_PUBLIC_COGNITO_REDIRECT_SIGN_IN=http://localhost:3000/auth/callback
NEXT_PUBLIC_COGNITO_REDIRECT_SIGN_OUT=http://localhost:3000/
NEXT_PUBLIC_COGNITO_SCOPES=openid,email,profile

# 로컬 인증 바이패스 설정(개발 편의)
LOCAL_BYPASS_ENABLED=true
LOCAL_BYPASS_SUB=local-dev-user-id
LOCAL_BYPASS_EMAIL=dev@example.com
LOCAL_BYPASS_USERNAME=local.dev
LOCAL_BYPASS_SCOPE=admin
LOCAL_BYPASS_GROUPS=
